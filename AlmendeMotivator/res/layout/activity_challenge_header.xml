<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:background="@color/darkerWhite"
                  android:layout_height="match_parent">
        <TextView
                android:id="@+id/txtStaticChallengeName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CHALLENGE NAME"
                android:layout_marginBottom="1dp"
                style="@style/header"/>
    <TextView android:layout_width="fill_parent"
              style="@style/status"
              android:id="@+id/txtStatus"
              android:text="This challenge is closed."
              android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/layoutChallenger"
                  android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
                  android:text="Challenger"
                  android:gravity="center"
                  style="@style/header"
                  android:layout_weight="2"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="Challengee"
                  android:layout_weight="2"
                  style="@style/header"
                  android:gravity="center"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/layoutChallenger"
                  android:orientation="horizontal">

        <TextView
                android:id="@+id/txtChallenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/normalText"
                android:gravity="center"
                android:text="@string/challenger"
                android:layout_weight="2"/>

        <TextView
                android:id="@+id/txtChallengee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/challengee"
                android:layout_weight="2"
                android:gravity="center"
                style="@style/normalText"/>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/layoutChallenger"
                  android:orientation="horizontal">

        <ImageView android:id="@+id/imgChallenger"
                   android:layout_width="300px"
                   android:layout_height="300px"
                   android:scaleType="fitCenter"
                   android:src="@drawable/profilepic"
                   android:layout_weight="1">
        </ImageView>

        <ImageView android:id="@+id/imgChallengee"
                   android:layout_width="300px"
                   android:layout_height="300px"
                   android:src="@drawable/profilepic"
                   android:scaleType="fitCenter"
                   android:onClick="onSelectFriendsPressed"
                   android:layout_weight="1">
        </ImageView>
    </LinearLayout>

        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:text="@string/the_challenge"
                  android:layout_marginTop="10dp"
                  style="@style/header"/>

        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:id="@+id/viewChallengeContent"
                  android:text="@string/insert_text"
                  style="@style/normalText"/>

        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:text="@string/required_evidence"
                  style="@style/header"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/viewChallengeEvidence"
                  android:text="@string/insert_text"
                  style="@style/normalText"/>

        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:text="@string/reward"
                  style="@style/header"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/viewChallengeReward"
                  android:text="@string/insert_text"
                  style="@style/normalText"/>

        <LinearLayout android:layout_width="fill_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content"
                      android:layout_gravity="bottom">

            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="All comments"
                      android:textColor="#000000"
                      style="@style/header"
                      android:textStyle="bold"/>

            <Button android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Motivate Friend +"
                    style="@style/button"
                    android:id="@+id/btnComment"
                    android:onClick="onCommentPressed"/>
        </LinearLayout>


    </LinearLayout>
